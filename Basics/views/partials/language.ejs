<p class="w3-large w3-text-theme">
  <b><i class="fa fa-globe fa-fw w3-margin-right w3-text-teal"></i>Languages</b>
</p>

<% for(let i = 0; i<languages.length; i++){ %>
  <div class="w3-container">
    <div class=" w3-round-xlarge w3-small"><b><%= languages[i]["title"] %></b></div>
    <div 
      class="w3-container w3-center w3-round-xlarge w3-teal"
      style="width: <%= languages[i]["text"] %>;"
    > 
      <%= languages[i]["text"] %>
    </div>
  </div>
  <%}%>
